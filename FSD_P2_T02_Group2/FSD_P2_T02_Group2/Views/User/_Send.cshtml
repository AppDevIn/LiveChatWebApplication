@model FSD_P2_T02_Group2.Models.ChatMessage
<script>
    var input = document.getElementById("textbox");

    // Execute a function when the user releases a key on the keyboard
    input.addEventListener("keyup", function (event) {
        // Number 13 is the "Enter" key on the keyboard
        if (event.keyCode === 13) {
            // Cancel the default action, if needed
            event.preventDefault();
            // Trigger the button element with a click
            document.getElementById("myBtn").click();
        }
    });
</script>
<form asp-action="ChatRoom" id="messagebox">
    <input type="text" placeholder="Type something..." asp-for="Message" id="textbox" runat="server">
    <button type="submit" onclick="clear()" id="myBtn">Send</button>
</form>