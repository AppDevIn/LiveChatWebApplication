@using Microsoft.AspNetCore.Http;
@{
    Layout = "_CommonNavbar";
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css">
</head>

<body>
    <script type="text/javascript">document.getElementById("common_navbar").classList.remove("fixed-top");</script>

    <div class="hero-image container-fluid">
        <div class="row hero-row">
            <div class="col vcenter">
                <div class="page-title">
                    <h1>Live Chat</h1>
                </div>
            </div>
            @if (Context.Session.GetString("Role") == "User")
            {
                <partial name="~/View/User/ChatRoom.cshtml" />
            }
            else
            {
                <form>
                    <h2 id="welcome_title">Hi<span style="color:white;"> ?name</span>, Welcome to Ukiyo!</h2>
                    <br />
                </form>
            }
        </div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
</body>
</html>

